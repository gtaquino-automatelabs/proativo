# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql+asyncpg://proativo_user:proativo_password@localhost:5432/proativo_db
POSTGRES_DB=proativo_db
POSTGRES_USER=proativo_user
POSTGRES_PASSWORD=proativo_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Configurações da API Google Gemini
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Configurações da API FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_for_jwt_here

# Configurações do Streamlit Frontend
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501
API_BASE_URL=http://localhost:8000

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/proativo.log

# Configurações de Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Configurações de Upload e ETL
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=data/uploads
SAMPLES_DIRECTORY=data/samples

# Configurações de Timeout e Retry
HTTP_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Configurações de Desenvolvimento
DEBUG=false
TESTING=false
ENVIRONMENT=production

# Configurações de CORS
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Configurações de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
FEEDBACK_ENABLED=true

# Configurações de PgAdmin (para docker-compose.yml)
PGADMIN_EMAIL=admin@proativo.com
PGADMIN_PASSWORD=admin123

# Configurações de SQLAlchemy
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Configurações de Segurança
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8
ENABLE_CORS_DEBUG=false

# Configurações de RAG
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_CONTEXT_LENGTH=4000

# Configurações específicas do LLM
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TOP_P=0.95